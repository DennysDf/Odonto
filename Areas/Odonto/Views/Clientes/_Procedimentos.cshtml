@model List<Odonto.Areas.Odonto.Models.Clientes.ProcedimentosVM>
@{
    Layout = null;
    var count = 0;
}

<div class="row justify-content-center">
    <div class="col-sm-3 text-center my-2">
        <button data-id="0" id="add-procedimentos" class="btn btn-dark w-100 edit-cliente mb-3"><i class="fa fa-plus text-white"></i> Cadastrar</button>
    </div>
</div>

<div class="accordion border border-dark" id="accordionExample">
    @foreach (var item in Model)
    {

        <div class="card m-b-0 border-top">
            <div class="card-header">
                <h5 class="mb-0">
                    <span class="float-right  d-sm-none ">
                        <span class="mx-3 del-procedimento" data-toggle="tooltip" title="Deletar" data-placement="left" style="cursor:pointer" data-id="@item.Id">
                            <i class="fa fa-times"></i>
                        </span>
                        <span class="edit" data-toggle="tooltip" title="Editar" data-placement="left" style="cursor:pointer" data-id="@item.Id">
                            <i class="fa fa-pencil-alt"></i>
                        </span>
                        <br />
                    </span>
                    <a data-toggle="collapse" data-target="#collapse-@count" aria-expanded="true" aria-controls="collapse-@count">
                        <i class="m-r-5 fa fa-arrow-right" aria-hidden="true"></i>
                        <span class="" style="cursor:pointer;color:#318EFD">@item.Data.ToDateMin() - @item.Titulo</span>
                    </a>

                    <span class="float-right  d-none d-md-block d-lg-block ">
                        <span class="mx-3 del-procedimento" data-toggle="tooltip" title="Deletar" data-placement="left" style="cursor:pointer" data-id="@item.Id">
                            <i class="fa fa-times"></i>
                        </span>
                        <span class="edit" data-toggle="tooltip" title="Editar" data-placement="left" style="cursor:pointer" data-id="@item.Id">
                            <i class="fa fa-pencil-alt"></i>
                        </span>
                        <br />
                    </span>

                </h5>
            </div>
            <div id="collapse-@count" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    @item.Descricao
                </div>
            </div>
        </div>
        count++;
    }
</div>